<Page x:Class="Documents_Тепляков.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Documents_Тепляков.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="420" d:DesignWidth="782"
      Title="Main">

    <Grid Background="White">
        <Grid Background="Gray" Margin="0,0,0,350">
            <Image Source="/Documents_Тепляков;component/Image/icon.png" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Height="50" Width="50"/>
            <Label Content="Учет входящих и исходящих документов" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" FontWeight="Bold" FontSize="22" Margin="70,5,0,0"/>
            <Button Click="Exit" Content="Выйти" HorizontalAlignment="Right" VerticalAlignment="Top" Width="120" Height="25" Margin="0,10,10,0"/>
        </Grid>
        <Grid Margin="0,70,0,0">
            <ScrollViewer Margin="10,10,10,45">
                <StackPanel x:Name="parent"/>
            </ScrollViewer>
            <Button Click="AddDocuments" Content="Добавить" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="120" Height="25" Margin="10,0,0,10"/>
        </Grid>
    </Grid>
</Page>
