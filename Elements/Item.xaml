<UserControl x:Class="Documents_Тепляков.Elements.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Documents_Тепляков.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="450">
    <Grid Background="White">
        <Image x:Name="IImg" Source="/Documents_Тепляков;component/Image/icon-black.png" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Height="80" Margin="10,10,0,0"/>
        <Label x:Name="IName" Content="Наименование" Foreground="Black" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" Margin="100,10,0,0" FontSize="10"/>
        <Label x:Name="IUser" Content="Ответственный" Foreground="Black" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="100,45,0,80" FontSize="10"/>
        <Label x:Name="ICode" Content="Код документа" Foreground="Black" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="100,0,0,50" FontSize="10"/>
        <Label x:Name="IDate" Content="Дата поступления" Foreground="Black" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,96,0" FontSize="10"/>
        <Label x:Name="IStatus" Content="Статус" Foreground="Black" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,45,149,80" FontSize="10"/>
        <Label x:Name="IDirect" Content="Направление" Foreground="Black" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,116,50" FontSize="10"/>
        <Button Click="EditDocument" Content="Изменить"   HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="80" Height="20" Margin="0,0,108,15" FontSize="10"/>
        <Button Click="DeleteDocument" Content="Удалить" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="80" Height="20" Margin="0,0,15,15" FontSize="10"/>
    </Grid>
</UserControl>
